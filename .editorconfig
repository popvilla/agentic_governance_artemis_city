# ============================================
# ARTEMIS CITY - EDITOR CONFIG
# ============================================
# EditorConfig helps maintain consistent coding styles
# across different editors and IDEs
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# ============================================
# DEFAULT SETTINGS (All Files)
# ============================================

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ============================================
# PYTHON
# ============================================

[*.py]
indent_size = 4
max_line_length = 100
quote_type = double

[*.pyi]
indent_size = 4

# ============================================
# JAVASCRIPT / TYPESCRIPT
# ============================================

[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
max_line_length = 100
quote_type = single

# ============================================
# WEB FORMATS
# ============================================

[*.{html,htm}]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2

# ============================================
# DATA FORMATS
# ============================================

[*.{json,jsonc}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{xml,svg}]
indent_size = 2

[*.toml]
indent_size = 2

# ============================================
# MARKDOWN
# ============================================

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{markdown}]
trim_trailing_whitespace = false
max_line_length = off

# ============================================
# SHELL SCRIPTS
# ============================================

[*.{sh,bash,zsh}]
indent_size = 2
end_of_line = lf

[*.{bat,cmd}]
indent_size = 4
end_of_line = crlf

[*.ps1]
indent_size = 4
end_of_line = lf

# ============================================
# MAKEFILES
# ============================================

[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# ============================================
# CONFIGURATION FILES
# ============================================

[*.{cfg,conf,config,ini}]
indent_size = 4

[.env*]
insert_final_newline = true
trim_trailing_whitespace = true

[.gitignore]
insert_final_newline = true

[.gitattributes]
insert_final_newline = true

# ============================================
# DOCUMENTATION
# ============================================

[*.{rst,txt}]
indent_size = 4

[LICENSE]
insert_final_newline = true
indent_size = 4

[README]
insert_final_newline = true

[CHANGELOG]
insert_final_newline = true

# ============================================
# SPECIAL FILES
# ============================================

# Package management
[package.json]
indent_size = 2

[package-lock.json]
indent_size = 2
insert_final_newline = true

[requirements*.txt]
insert_final_newline = true

[pyproject.toml]
indent_size = 2

# Docker
[Dockerfile]
indent_size = 4

[docker-compose*.yml]
indent_size = 2

# CI/CD
[.travis.yml]
indent_size = 2

[.gitlab-ci.yml]
indent_size = 2

[*.jenkinsfile]
indent_size = 2
