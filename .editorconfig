# ============================================
# ARTEMIS CITY - EDITOR CONFIG
# ============================================
# EditorConfig helps maintain consistent coding styles
# across different editors and IDEs
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# ============================================
# DEFAULT SETTINGS (All Files)
# ============================================

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ============================================
# PYTHON
# ============================================

[*.py]
max_line_length = 100

# ============================================
# JAVASCRIPT / TYPESCRIPT
# ============================================

[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
max_line_length = 100

# ============================================
# WEB FORMATS
# ============================================

[*.{html,htm}]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2

# ============================================
# DATA FORMATS
# ============================================

[*.{json,jsonc}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{xml,svg}]
indent_size = 2

[*.toml]
indent_size = 2

# ============================================
# MARKDOWN
# ============================================

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.markdown]
trim_trailing_whitespace = false
max_line_length = off

# ============================================
# SHELL SCRIPTS
# ============================================

[*.{sh,bash,zsh}]
indent_size = 2

[*.{bat,cmd}]
end_of_line = crlf

# ============================================
# MAKEFILES
# ============================================

[Makefile]
indent_style = tab

