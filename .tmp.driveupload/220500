import React, { useState, useEffect, useRef } from 'react';
import { MagicWandIcon, LightbulbIcon, DownloadIcon, LayoutPanelLeftIcon, LayoutGridIcon, LayoutGrid2x2Icon, PaletteIcon, WandSparklesIcon, Spinner } from './icons';

interface HeaderProps {
  onGenerateAppClick: () => void;
  onReviewCodeClick: () => void;
  onFormatCodeClick: () => void;
  isFormatting: boolean;
  onDownload: () => void;
  onLayoutChange: (layout: 'panel' | 'grid' | 'split') => void;
  currentLayout: 'panel' | 'grid' | 'split';
  theme: 'light' | 'dark' | 'matrix' | 'glass-robo';
  onThemeChange: (theme: 'light' | 'dark' | 'matrix' | 'glass-robo') => void;
}

const Header: React.FC<HeaderProps> = ({
  onGenerateAppClick,
  onReviewCodeClick,
  onFormatCodeClick,
  isFormatting,
  onDownload,
  onLayoutChange,
  currentLayout,
  theme,
  onThemeChange,
}) => {
  const [isThemeMenuOpen, setIsThemeMenuOpen] = useState(false);
  const themeMenuRef = useRef<HTMLDivElement>(null);

  const themes: { id: 'light' | 'dark' | 'matrix' | 'glass-robo'; name: string }[] = [
    { id: 'light', name: 'Light' },
    { id: 'dark', name: 'Dark' },
    { id: 'matrix', name: 'Matrix' },
    { id: 'glass-robo', name: 'Glass Robo' },
  ];

  useEffect(() => {
    const handleClickOutside = (event: MouseEvent) => {
      if (themeMenuRef.current && !themeMenuRef.current.contains(event.target as Node)) {
        setIsThemeMenuOpen(false);
      }
    };
    document.addEventListener("mousedown", handleClickOutside);
    return () => {
      document.removeEventListener("mousedown", handleClickOutside);
    };
  }, [themeMenuRef]);
  
  return (
    <header className="bg-white/80 dark:bg-slate-900/80 backdrop-blur-sm sticky top-0 z-30 border-b border-slate-200 dark:border-slate-700">
      <div className="container mx-auto px-4 sm:px-6 lg:px-8">
        <div className="flex items-center justify-between h-16">
          <div className="flex items-center space-x-3">
            <svg
              className="w-8 h-8 text-cyan-500 dark:text-cyan-400"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              strokeWidth={1.5}
              stroke="currentColor"
            >
              <path
                strokeLinecap="round"
                strokeLinejoin="round"
                d="M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 12"
              />
            </svg>
            <h1 className="text-xl font-bold text-slate-800 dark:text-slate-100">
              Gemini AI Web IDE
            </h1>
          </div>
          <div className="flex items-center space-x-2">
            <div ref={themeMenuRef} className="relative">
              <button
                onClick={() => setIsThemeMenuOpen(!isThemeMenuOpen)}
                className="p-2 rounded-md text-slate-500 dark:text-slate-400 hover:bg-slate-200 dark:hover:bg-slate-700/50 hover:text-slate-800 dark:hover:text-white"
                title="Change Theme"
              >
                <PaletteIcon className="w-5 h-5" />
              </button>
              {isThemeMenuOpen && (
                <div className="absolute right-0 mt-2 w-48 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-md shadow-lg z-50">
                  <div className="py-1">
                    {themes.map((t) => (
                      <button
                        key={t.id}
                        onClick={() => {
                          onThemeChange(t.id);
                          setIsThemeMenuOpen(false);
                        }}
                        className={`w-full text-left px-4 py-2 text-sm transition-colors ${
                          theme === t.id
                            ? 'bg-cyan-600 text-white'
                            : 'text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700'
                        }`}
                      >
                        {t.name}
                      </button>
                    ))}
                  </div>
                </div>
              )}
            </div>

            {/* Layout Selection Buttons */}
            <div className="flex items-center space-x-1 p-1 bg-slate-200/50 dark:bg-slate-800/50 rounded-lg">
              <button
                onClick={() => onLayoutChange('panel')}
                className={`p-1.5 rounded-md transition-colors duration-200 ${currentLayout === 'panel' ? 'bg-white dark:bg-cyan-700 text-slate-800 dark:text-white' : 'text-slate-500 dark:text-slate-400 hover:bg-white/50 dark:hover:bg-slate-700/50 hover:text-slate-800 dark:hover:text-white'}`}
                title="Panel Layout"
                aria-label="Panel Layout"
              >
                <LayoutPanelLeftIcon className="w-5 h-5" />
              </button>
              <button
                onClick={() => onLayoutChange('grid')}
                className={`p-1.5 rounded-md transition-colors duration-200 ${currentLayout === 'grid' ? 'bg-white dark:bg-cyan-700 text-slate-800 dark:text-white' : 'text-slate-500 dark:text-slate-400 hover:bg-white/50 dark:hover:bg-slate-700/50 hover:text-slate-800 dark:hover:text-white'}`}
                title="Grid Layout (All Panels)"
                aria-label="Grid Layout All Panels"
              >
                <LayoutGridIcon className="w-5 h-5" />
              </button>
              <button
                onClick={() => onLayoutChange('split')}
                className={`p-1.5 rounded-md transition-colors duration-200 ${currentLayout === 'split' ? 'bg-white dark:bg-cyan-700 text-slate-800 dark:text-white' : 'text-slate-500 dark:text-slate-400 hover:bg-white/50 dark:hover:bg-slate-700/50 hover:text-slate-800 dark:hover:text-white'}`}
                title="Split View (Editor + Secondary Panel)"
                aria-label="Split View Editor and Secondary Panel"
              >
                <LayoutGrid2x2Icon className="w-5 h-5" />
              </button>
            </div>

            <button
              onClick={onDownload}
              className="p-2 rounded-md text-slate-500 dark:text-slate-400 hover:bg-slate-200 dark:hover:bg-slate-700/50 hover:text-slate-800 dark:hover:text-white"
              title="Download Project as ZIP"
            >
              <DownloadIcon className="w-5 h-5" />
            </button>
            
            <button
              onClick={onFormatCodeClick}
              disabled={isFormatting}
              className="flex items-center gap-2 text-sm bg-slate-500 hover:bg-slate-600 text-white font-semibold py-2 px-4 rounded-md transition-all transform hover:scale-105 shadow-lg disabled:opacity-70 disabled:cursor-not-allowed"
              title="Format the active code file"
              aria-label="Format active code file"
            >
              {isFormatting ? <Spinner className="w-4 h-4" /> : <WandSparklesIcon className="w-4 h-4" />}
              {isFormatting ? "Formatting..." : "Format Code"}
            </button>

            <button
              onClick={onReviewCodeClick}
              className="flex items-center gap-2 text-sm bg-gradient-to-r from-teal-500 to-emerald-600 hover:from-teal-600 hover:to-emerald-700 text-white font-semibold py-2 px-4 rounded-md transition-all transform hover:scale-105 shadow-lg"
              title="Get AI feedback on the active code file"
              aria-label="Review active code file"
            >
              <LightbulbIcon className="w-4 h-4" />
              Review Code
            </button>
            <button
              onClick={onGenerateAppClick}
              className="flex items-center gap-2 text-sm bg-gradient-to-r from-purple-500 to-indigo-600 hover:from-purple-600 hover:to-indigo-700 text-white font-semibold py-2 px-4 rounded-md transition-all transform hover:scale-105 shadow-lg"
              title="Generate a new application from a prompt"
              aria-label="Generate new application"
            >
              <MagicWandIcon className="w-4 h-4" />
              Generate App
            </button>
          </div>
        </div>
      </div>
    </header>
  );
};

export default Header;