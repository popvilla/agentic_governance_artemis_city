import React, { useState, useEffect, useMemo, useCallback } from 'react';
import { Folder } from '../types';
import { createPreviewHtml } from '../utils';
import { FileIcon } from './icons';

interface PreviewProps {
  fileTree: Folder;
}

// Simple debounce hook
function useDebouncedValue<T>(value: T, delay: number): T {
    const [debouncedValue, setDebouncedValue] = useState(value);
    useEffect(() => {
        const handler = setTimeout(() => {
            setDebouncedValue(value);
        }, delay);
        return () => {
            clearTimeout(handler);
        };
    }, [value, delay]);
    return debouncedValue;
}

export const Preview: React.FC<PreviewProps> = ({ fileTree }) => {
  const [iframeSrc, setIframeSrc] = useState('');
  const [warnings, setWarnings] = useState<string[]>([]);
  const [key, setKey] = useState(Date.now()); // to force iframe re-render

  const debouncedFileTree = useDebouncedValue(fileTree, 500);

  useEffect(() => {
    const { html, warnings: newWarnings } = createPreviewHtml(debouncedFileTree);
    setWarnings(newWarnings);

    if (html) {
      const blob = new Blob([html], { type: 'text/html' });
      const url = URL.createObjectURL(blob);
      setIframeSrc(url);

      // It's important to revoke the object URL when the component unmounts
      // or when the src changes, to avoid memory leaks.
      return () => {
        URL.revokeObjectURL(url);
      };
    } else {
        setIframeSrc('');
    }
  }, [debouncedFileTree, key]);

  const handleRefresh = useCallback(() => {
    setKey(Date.now());
  }, []);

  const content = useMemo(() => {
    if (!iframeSrc) {
      return (
        <div className="flex flex-col items-center justify-center h-full text-center text-gray-400 p-4">
          <FileIcon className="w-16 h-16 mx-auto mb-4 text-gray-500" />
          <h3 className="text-xl font-semibold mb-2">No Preview Available</h3>
          <p>Create an <code className="bg-gray-700 p-1 rounded-md text-sm">index.html</code> file to see a live preview.</p>
        </div>
      );
    }

    return (
      <iframe
        key={iframeSrc}
        src={iframeSrc}
        title="Live Preview"
        className="w-full h-full border-0 bg-white"
        sandbox="allow-scripts allow-same-origin"
      />
    );
  }, [iframeSrc]);

  return (
    <div className="w-full h-full flex flex-col bg-gray-900">
      <div className="flex-shrink-0 p-2 border-b border-gray-700 flex justify-between items-center">
        <div className="text-xs font-mono text-gray-400">
            {warnings.length > 0 ? (
                <span className="text-yellow-400">Warnings: {warnings.join(', ')}</span>
            ) : (
                <span>Preview Ready</span>
            )}
        </div>
        <button
          onClick={handleRefresh}
          className="text-xs bg-gray-700 hover:bg-cyan-600 text-gray-200 font-semibold py-1 px-3 rounded-md transition-colors"
        >
          Refresh
        </button>
      </div>
      <div className="flex-grow w-full h-full">
        {content}
      </div>
    </div>
  );
};