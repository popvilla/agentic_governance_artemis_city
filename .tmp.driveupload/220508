import React, { useState, useMemo } from 'react';
import { Change, Commit } from '../types';
import { PlusCircleIcon, MinusCircleIcon, GitCommitIcon, HistoryIcon, FileIcon } from './icons';
import { calculateChanges } from '../utils';

interface SourceControlViewProps {
    workingDirChanges: Change[];
    stagedChanges: Change[];
    commits: Commit[];
    onStage: (change: Change) => void;
    onUnstage: (change: Change) => void;
    onCommit: (message: string) => void;
    onCheckout: (commitId: string) => void;
}

const ChangeItem: React.FC<{ change: Change; actionIcon: React.ReactNode; onAction: (change: Change) => void }> = ({ change, actionIcon, onAction }) => {
    let colorClass = 'text-slate-700 dark:text-slate-300';
    let statusChar = '';
    if (change.type === 'added') {
        colorClass = 'text-green-600 dark:text-green-400';
        statusChar = 'A';
    } else if (change.type === 'modified') {
        colorClass = 'text-yellow-600 dark:text-yellow-400';
        statusChar = 'M';
    } else if (change.type === 'deleted') {
        colorClass = 'text-red-600 dark:text-red-400';
        statusChar = 'D';
    }

    return (
        <div className="flex items-center justify-between py-1.5 px-2 rounded-md hover:bg-slate-300/50 dark:hover:bg-slate-700/50">
            <div className="flex items-center gap-3">
                <FileIcon className={`w-4 h-4 ${colorClass}`} />
                <span className={`font-mono text-sm ${colorClass}`}>{change.path}</span>
            </div>
            <div className="flex items-center gap-2">
                 <span className={`w-5 h-5 flex items-center justify-center font-bold text-xs ${colorClass}`}>{statusChar}</span>
                <button onClick={() => onAction(change)} className="text-slate-500 dark:text-slate-400 hover:text-slate-800 dark:hover:text-white transition-colors">
                    {actionIcon}
                </button>
            </div>
        </div>
    );
};

const Section: React.FC<{ title: string; count: number; children: React.ReactNode }> = ({ title, count, children }) => (
    <div>
        <h3 className="text-sm font-bold uppercase text-slate-500 dark:text-slate-400 tracking-wider px-2 mb-2">
            {title} ({count})
        </h3>
        <div className="space-y-1">
            {children}
        </div>
    </div>
);

const CommitItem: React.FC<{
  commit: Commit, 
  isHead: boolean, 
  isSelected: boolean,
  changes: Change[],
  onSelect: () => void,
  onCheckout: () => void
}> = ({ commit, isHead, isSelected, changes, onSelect, onCheckout }) => {
  const getChangeTypeClass = (type: Change['type']) => {
    switch(type) {
      case 'added': return 'text-green-600 dark:text-green-400';
      case 'modified': return 'text-yellow-600 dark:text-yellow-400';
      case 'deleted': return 'text-red-600 dark:text-red-400';
      default: return 'text-slate-500 dark:text-slate-400';
    }
  };

  return (
    <div className="border-b border-slate-300 dark:border-slate-700/50">
      <div 
        onClick={onSelect}
        className={`flex items-center justify-between p-2 cursor-pointer ${isSelected ? 'bg-cyan-200/50 dark:bg-cyan-900/50' : 'hover:bg-slate-300/50 dark:hover:bg-slate-700/50'}`}
      >
         <div>
            <p className="text-sm text-slate-800 dark:text-slate-200 font-medium flex items-center">
                {commit.message}
                {isHead && <span className="ml-2 text-xs font-bold text-cyan-700 dark:text-cyan-400 bg-cyan-200/50 dark:bg-cyan-900/50 px-2 py-0.5 rounded-full">HEAD</span>}
            </p>
            <p className="text-xs text-slate-500 dark:text-slate-400 font-mono">
                {commit.id.substring(0, 7)} - {new Date(commit.timestamp).toLocaleString()}
            </p>
        </div>
        <button
            onClick={(e) => { e.stopPropagation(); onCheckout(); }}
            disabled={isHead}
            className="text-xs bg-slate-400 dark:bg-slate-700 hover:bg-cyan-500 dark:hover:bg-cyan-600 text-slate-900 dark:text-slate-200 font-semibold py-1 px-3 rounded-md transition-colors disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:bg-slate-400 dark:disabled:hover:bg-slate-700"
        >
            Checkout
        </button>
      </div>
      {isSelected && (
        <div className="bg-slate-200/50 dark:bg-slate-900/50 p-3">
          <h4 className="text-xs font-bold text-slate-500 dark:text-slate-400 mb-2">Changes:</h4>
          {changes.length > 0 ? (
            <div className="space-y-1">
              {changes.map(change => (
                <div key={change.path} className={`flex items-center gap-2 text-sm font-mono ${getChangeTypeClass(change.type)}`}>
                  <span className="font-bold w-4 text-center">{change.type.charAt(0).toUpperCase()}</span>
                  <span>{change.path}</span>
                </div>
              ))}
            </div>
          ) : (
            <p className="text-xs text-slate-500 italic">Initial commit or no file changes.</p>
          )}
        </div>
      )}
    </div>
  );
};


export const SourceControlView: React.FC<SourceControlViewProps> = ({
    workingDirChanges,
    stagedChanges,
    commits,
    onStage,
    onUnstage,
    onCommit,
    onCheckout
}) => {
    const [commitMessage, setCommitMessage] = useState('');
    const [selectedCommitId, setSelectedCommitId] = useState<string | null>(null);

    const handleCommit = () => {
        if (commitMessage.trim() && stagedChanges.length > 0) {
            onCommit(commitMessage.trim());
            setCommitMessage('');
        }
    };
    
    const reversedCommits = [...commits].reverse();
    const headCommitId = reversedCommits.length > 0 ? reversedCommits[0].id : null;

    const commitChangesMap = useMemo(() => {
        const map = new Map<string, Change[]>();
        commits.forEach((commit, index) => {
            const parentCommit = index > 0 ? commits[index - 1] : null;
            const parentFiles = parentCommit ? parentCommit.files : {};
            const changes = calculateChanges(parentFiles, commit.files);
            map.set(commit.id, changes);
        });
        return map;
    }, [commits]);

    return (
        <div className="flex flex-col h-full">
            <div className="flex-grow p-4 overflow-y-auto space-y-6">
                <div className="flex flex-col gap-2">
                    <textarea
                        value={commitMessage}
                        onChange={(e) => setCommitMessage(e.target.value)}
                        placeholder="Commit message"
                        rows={3}
                        className="w-full bg-white dark:bg-slate-900 border border-slate-300 dark:border-slate-600 rounded-lg p-2 text-sm text-slate-800 dark:text-slate-200 focus:ring-2 focus:ring-cyan-500 focus:outline-none transition placeholder-slate-400 dark:placeholder-slate-500"
                    />
                    <button
                        onClick={handleCommit}
                        disabled={!commitMessage.trim() || stagedChanges.length === 0}
                        className="bg-slate-500 hover:bg-cyan-600 dark:bg-slate-600 dark:hover:bg-cyan-600 text-white font-semibold py-2 px-4 rounded-lg flex items-center justify-center transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                    >
                        <GitCommitIcon className="w-5 h-5 mr-2" />
                        Commit to HEAD
                    </button>
                </div>

                {stagedChanges.length > 0 && (
                    <Section title="Staged Changes" count={stagedChanges.length}>
                        {stagedChanges.map(change => (
                            <ChangeItem
                                key={change.path}
                                change={change}
                                actionIcon={<MinusCircleIcon className="w-5 h-5" />}
                                onAction={onUnstage}
                            />
                        ))}
                    </Section>
                )}

                {workingDirChanges.length > 0 && (
                    <Section title="Changes" count={workingDirChanges.length}>
                        {workingDirChanges.map(change => (
                            <ChangeItem
                                key={change.path}
                                change={change}
                                actionIcon={<PlusCircleIcon className="w-5 h-5" />}
                                onAction={onStage}
                            />
                        ))}
                    </Section>
                )}
                
                {workingDirChanges.length === 0 && stagedChanges.length === 0 && (
                    <div className="text-center text-slate-500 py-8">
                        <p>No changes detected.</p>
                    </div>
                )}
            </div>

            <div className="flex-shrink-0 border-t border-slate-300 dark:border-slate-700 h-1/2 flex flex-col">
                <h3 className="text-sm font-bold uppercase text-slate-500 dark:text-slate-400 tracking-wider p-2 px-4 flex items-center gap-2">
                    <HistoryIcon className="w-4 h-4" />
                    History
                </h3>
                <div className="flex-grow overflow-y-auto">
                    {reversedCommits.map(commit => (
                        <CommitItem
                            key={commit.id}
                            commit={commit}
                            isHead={commit.id === headCommitId}
                            isSelected={commit.id === selectedCommitId}
                            changes={commitChangesMap.get(commit.id) || []}
                            onSelect={() => setSelectedCommitId(selectedCommitId === commit.id ? null : commit.id)}
                            onCheckout={() => onCheckout(commit.id)}
                        />
                    ))}
                </div>
            </div>
        </div>
    );
};