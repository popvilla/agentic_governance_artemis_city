

import React from 'react';
import { HistoryItem } from '../types';

interface HistoryPanelProps {
  history: HistoryItem[];
  onSelectItem: (id: string) => void;
  onClearHistory: () => void;
  currentItemId?: string | null;
  onSaveSession: (id: string) => void;
  onExportAll: () => void;
}

const HistoryPanel: React.FC<HistoryPanelProps> = ({ history, onSelectItem, onClearHistory, currentItemId, onSaveSession, onExportAll }) => {
  const getContextSummary = (item: HistoryItem): string => {
    const parts: string[] = [];
    if (item.context?.files?.length) {
        parts.push(`${item.context.files.length} file(s)`);
    }
    if (item.context?.urls?.length) {
        parts.push(`${item.context.urls.length} URL(s)`);
    }
    if (item.context?.text?.trim()) {
        parts.push('text');
    }
    if (parts.length === 0) return 'No context';
    return `Context: ${parts.join(', ')}`;
  }

  const handleSaveClick = (e: React.MouseEvent, id: string) => {
    e.stopPropagation(); // Prevent onSelectItem from being called
    onSaveSession(id);
  };
  
  return (
    <aside className="bg-slate-800 rounded-lg shadow-lg flex flex-col h-[80vh]">
      <div className="flex items-center justify-between p-3 border-b border-slate-700">
        <h2 className="text-sm font-semibold text-slate-300">Review History</h2>
        <div className="flex items-center gap-3">
            <button
                onClick={onExportAll}
                disabled={history.length === 0}
                className="flex items-center gap-1.5 text-xs text-slate-400 hover:text-cyan-400 disabled:text-slate-600 disabled:cursor-not-allowed transition-colors"
                title="Export all sessions as a zip archive"
                aria-label="Export all sessions"
            >
                <svg xmlns="http://www.w3.org/2000/svg" className="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M4 3a2 2 0 100 4h12a2 2 0 100-4H4z" />
                    <path fillRule="evenodd" d="M3 8h14v7a2 2 0 01-2 2H5a2 2 0 01-2-2V8zm5 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" clipRule="evenodd" />
                </svg>
                Export All
            </button>
            <button
            onClick={onClearHistory}
            disabled={history.length === 0}
            className="text-xs text-slate-400 hover:text-red-400 disabled:text-slate-600 disabled:cursor-not-allowed transition-colors"
            aria-label="Clear history"
            >
            Clear
            </button>
        </div>
      </div>
      <div className="flex-grow overflow-y-auto">
        {history.length === 0 ? (
          <div className="p-4 text-center text-sm text-slate-500">
            No history yet.
          </div>
        ) : (
          <ul>
            {history.slice().sort((a, b) => new Date(b.timestamp).getTime() - new Date(a.timestamp).getTime()).map((item) => (
              <li key={item.id} className="relative group">
                <button
                  onClick={() => onSelectItem(item.id)}
                  className={`w-full text-left p-3 text-sm border-b border-slate-700/50 transition-colors ${
                    currentItemId === item.id
                      ? 'bg-cyan-900/50'
                      : 'hover:bg-slate-700/50'
                  }`}
                >
                  <button 
                    onClick={(e) => handleSaveClick(e, item.id)}
                    className="absolute top-2 right-2 p-1 text-slate-400 hover:text-cyan-400 rounded-md hover:bg-slate-700 transition-colors z-10 opacity-0 group-hover:opacity-100 focus:opacity-100"
                    title="Save session to file"
                    aria-label="Save session to file"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" className="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" strokeWidth={2}>
                        <path strokeLinecap="round" strokeLinejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                    </svg>
                  </button>

                  <div className="font-medium text-slate-200 pr-8">{item.language}</div>
                  <div className="text-xs text-slate-400 truncate pr-8">
                    {item.code.split('\n')[0] || 'Untitled Snippet'}
                  </div>
                   <div className="text-xs text-slate-500 mt-1 italic">
                    {getContextSummary(item)}
                  </div>
                  <div className="text-xs text-slate-500 mt-1">
                    {new Date(item.timestamp).toLocaleString()}
                  </div>
                </button>
              </li>
            ))}
          </ul>
        )}
      </div>
    </aside>
  );
};

export default HistoryPanel;
