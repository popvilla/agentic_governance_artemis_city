import React, { useState, ReactNode } from 'react';
import { ChevronRight } from './icons';

interface AccordionItemProps {
  title: string;
  icon?: React.ReactNode;
  children: ReactNode;
  initialOpen?: boolean;
}

export const AccordionItem: React.FC<AccordionItemProps> = ({ title, icon, children, initialOpen = false }) => {
  const [isOpen, setIsOpen] = useState(initialOpen);

  return (
    <div className={`flex flex-col border-b border-slate-300 dark:border-slate-700 ${isOpen ? 'flex-grow' : 'flex-shrink-0'}`}>
      <button
        onClick={() => setIsOpen(!isOpen)}
        className="flex items-center w-full p-2 text-sm font-semibold text-slate-700 dark:text-slate-300 hover:bg-slate-300/50 dark:hover:bg-slate-700/50 transition-colors"
        aria-expanded={isOpen}
      >
        <ChevronRight className={`w-4 h-4 mr-2 transition-transform ${isOpen ? 'rotate-90' : ''}`} />
        {icon && <span className="mr-2">{icon}</span>}
        <span>{title}</span>
      </button>
      {isOpen && (
        <div className="flex-grow overflow-hidden">
          {children}
        </div>
      )}
    </div>
  );
};

interface AccordionProps {
    children: ReactNode;
}

export const Accordion: React.FC<AccordionProps> = ({ children }) => {
    return <div className="flex flex-col h-full w-full">{children}</div>;
}